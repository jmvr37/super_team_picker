<%- include('./partials/header') %>
<% const {id, cohort_name, cohort_members} = cohort %>

<h1><%= cohort_name %></h1>
<p><%= cohort_members %></p>

<form action="/contact" method="POST">

  <div class="mb-3">
    <label for="teamCount" class="form-label">Method</label>
    <input type="radio" name="teamCount" id="teamCount">Team Count</input>

    <input type="radio" name="numberPerTeam" id="numberPerTeam">Number Per Team</input>
    <input type="number" name="quantity" id="quantity">Quantity</input>
  </div>

  <button type="submit" class="btn btn-primary">Assign Teams</button>

  <a href="/cohorts/<%= id %>/edit" class="btn btn-warning">Edit</a>
</form>


<%- include('./partials/footer') %>
