<%- include('./partials/header') %>

<form action="/contact" method="POST">
    
    <div class="mb-3">
      <label for="teamCount" class="form-label">Method</label>
      <input type="radio" name="teamCount" id="teamCount">Team Count</input>
     
      <input type="radio" name="numberPerTeam" id="numberPerTeam">Number Per Team</input>
      </div>
    <div class="mb-3">
        <label for="Members" class="form-label">Members</label>
        <textArea name="Members" class="form-control" id="Members" placeholder="Kevin Malone, Phillys Vance, Kelly Kapoor, Moose shrute "type="text"></textArea>
      </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>


  <div class="list-group">
    <h1>cohorts</h1>
    <% cohorts.forEach(cohort => { %>
    <a
      href="#"
      class="list-group-item list-group-item-action"
      aria-current="true"
    >
      <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1"><%= cohort.cohort_name %></h5>
      </div>
      <p class="mb-1"><%= cohort.name %></p>
      <small>By <%= cohort.cohort_members %></small>
    </a>
    <% }) %>
  </div>


<%- include('./partials/footer') %>